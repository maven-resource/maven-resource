<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.maven.resource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>xhtml</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>XHTML</name>

    <profiles>
        <profile>
            <id>xhtml</id>
            <activation>
                <file>
                    <exists>src/main/xhtml</exists>
                </file>
            </activation>
            <build>
                <resources>
                    <resource>
                        <targetPath>${generatedResources}/xhtml</targetPath>
                        <filtering>true</filtering>
                        <directory>src/main/xhtml</directory>
                    </resource>
                </resources>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                            <artifactId>htmlcompressor-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>compress-xhtml</id>
                                    <phase>process-resources</phase>
                                    <goals>
                                        <goal>html</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                    <configuration>
                                        <srcFolder>${generatedResources}/xhtml</srcFolder>
                                        <targetFolder>${project.build.outputDirectory}</targetFolder>
                                        <fileExt>
                                            <fileExt>xhtml</fileExt>
                                        </fileExt>
                                    </configuration>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                        </plugin>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>xml-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>validate-xhtml</id>
                                    <phase>process-classes</phase>
                                    <goals>
                                        <goal>validate</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                    <configuration>
                                        <validationSets>
                                            <validationSet>
                                                <dir>${project.build.outputDirectory}</dir>
                                                <includes>
                                                    <include>**/*.xhtml</include>
                                                </includes>
                                                <validating>!${validation.skip}</validating>
                                            </validationSet>
                                        </validationSets>
                                    </configuration>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                        <artifactId>htmlcompressor-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>xml-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
