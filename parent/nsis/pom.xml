<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.maven.resource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>nsis</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>NSIS Installer</name>

    <profiles>
        <!--
            NSIS Installer Profile

            This plugin will create a NSIS-based Microsoft Windows installer.

            TODO: add links to this plugin's home
            TODO: add links to NSIS
            TODO: add links to Windows intallation references
            TODO: test
        -->
        <profile>
            <id>nsis</id>
            <activation>
                <file>
                    <exists>src/main/nsis</exists>
                </file>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>nsis-maven-plugin</artifactId>
                            <version>1.0-alpha-1</version>
                            <executions>
                                <execution>
                                    <goals>
                                        <goal>generate-headerfile</goal>
                                        <goal>make</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>nsis-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
