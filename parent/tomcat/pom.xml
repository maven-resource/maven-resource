<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.maven.resource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>tomcat</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Tomcat</name>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.tomcat.maven</groupId>
                    <artifactId>tomcat7-maven-plugin</artifactId>
                    <version>2.2</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>tomcat</id>
            <activation>
                <file>
                    <exists>src/main/tomcat</exists>
                </file>
            </activation>
            <build>
                <resources>
                    <resource>
                        <targetPath>${project.build.directory}/${project.build.finalName}</targetPath>
                        <filtering>true</filtering>
                        <directory>src/main/tomcat</directory>
                        <includes>
                            <include>META-INF/**</include>
                        </includes>
                    </resource>
                    <resource>
                        <targetPath>${project.build.outputDirectory}/conf/tomcat</targetPath>
                        <filtering>true</filtering>
                        <directory>src/main/tomcat</directory>
                        <excludes>
                            <exclude>META-INF</exclude>
                        </excludes>
                    </resource>
                </resources>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.apache.tomcat.maven</groupId>
                            <artifactId>tomcat7-maven-plugin</artifactId>
                            <inherited>true</inherited>
                            <configuration>
                                <systemProperties>
                                    <java.io.tmpdir>${project.build.directory}</java.io.tmpdir>
                                </systemProperties>
                                <useclasspath>false</useclasspath>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
    </profiles>

</project>
