<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.maven.resource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>robotframework</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Robotframework</name>
    <description>Profiles for running Robot Framework acceptance tests</description>

    <profiles>
        <profile>
            <id>robotframework</id>
            <activation>
                <file>
                    <exists>src/test/robotframework</exists>
                </file>
            </activation>
            <build>
                <testResources>
                    <testResource>
                        <targetPath>${project.build.directory}/robotframework</targetPath>
                        <filtering>true</filtering>
                        <directory>src/test/resources</directory>
                        <includes>
                            <include>variables.py</include>
                        </includes>
                    </testResource>
                    <testResource>
                        <targetPath>${project.build.directory}/robotframework</targetPath>
                        <filtering>false</filtering>
                        <directory>src/test/robotframework</directory>
                    </testResource>
                </testResources>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>exec-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>run-robots</id>
                                    <phase>integration-test</phase>
                                    <goals>
                                        <goal>exec</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                    <configuration>
                                        <executable>${python.executable}</executable>
                                        <arguments>
                                            <argument>-m</argument>
                                            <argument>robot.run</argument>
                                            <argument>${project.build.directory}/robotframework</argument>
                                        </arguments>
                                        <environmentVariables>
                                            <DISPLAY>:0.0</DISPLAY>
                                        </environmentVariables>
                                    </configuration>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
