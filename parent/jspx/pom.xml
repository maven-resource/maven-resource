<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.maven.resource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>jspx</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>JSPX</name>

    <profiles>

        <profile>
            <id>jspxâ€“dependency-management</id>
            <activation>
                <property>
                    <name>jspx</name>
                    <value>!true</value>
                </property>
            </activation>
            <dependencyManagement>
                <dependencies>
                    <dependency>
                        <groupId>io.github.maven.resource.bom</groupId>
                        <artifactId>servlet-jsp-jstl-el</artifactId>
                        <version>0.1.0-SNAPSHOT</version>
                        <type>pom</type>
                        <scope>import</scope>
                    </dependency>
                </dependencies>
            </dependencyManagement>
        </profile>

        <!-- Java Server Pages - XML SYNTAX -->
        <profile>
            <id>jspx</id>
            <activation>
                <file>
                    <exists>src/main/jspx</exists>
                </file>
            </activation>
            <build>
                <resources>
                    <resource>
                        <targetPath>${generatedJspx}</targetPath>
                        <filtering>false</filtering>
                        <directory>src/main/jspx</directory>
                    </resource>
                </resources>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                            <artifactId>htmlcompressor-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>jspx-process</id>
                                    <phase>compile</phase>
                                    <goals>
                                        <goal>html</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                            <configuration>
                                <srcFolder>${generatedJspx}</srcFolder>
                                <targetFolder>${template.destination}/jspx</targetFolder>
                                <fileExt>
                                    <fileExt>jspx</fileExt>
                                </fileExt>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                        <artifactId>htmlcompressor-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <generatedJspx>${project.build.directory}/generated-resources/jspx</generatedJspx>
                <template.destination>${project.build.outputDirectory}/META-INF</template.destination>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>javax.servlet</groupId>
                    <artifactId>javax.servlet-api</artifactId>
                </dependency>
                <dependency>
                    <groupId>javax.servlet.jsp</groupId>
                    <artifactId>javax.servlet.jsp-api</artifactId>
                </dependency>
                <dependency>
                    <groupId>javax.servlet.jsp.jstl</groupId>
                    <artifactId>javax.servlet.jsp.jstl-api</artifactId>
                </dependency>
                <dependency>
                    <groupId>javax.el</groupId>
                    <artifactId>javax.el-api</artifactId>
                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>tagx</id>
            <activation>
                <file>
                    <exists>src/main/tagx</exists>
                </file>
            </activation>
            <build>
                <resources>
                    <resource>
                        <targetPath>${project.build.directory}/generated-resources/tagx</targetPath>
                        <filtering>false</filtering>
                        <directory>src/main/tagx</directory>
                    </resource>
                </resources>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                            <artifactId>htmlcompressor-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>process-tagx-tags</id>
                                    <phase>compile</phase>
                                    <goals>
                                        <goal>html</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                    <configuration>
                                        <srcFolder>${generatedTagx}</srcFolder>
                                        <targetFolder>${template.destination}/tags</targetFolder>
                                        <fileExt>
                                            <fileExt>tagx</fileExt>
                                        </fileExt>
                                    </configuration>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                        <artifactId>htmlcompressor-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                </plugins>
            </build>
            <properties>
                <generatedTagx>${project.build.directory}/generated-resources/tagx</generatedTagx>
                <template.destination>${project.build.outputDirectory}/META-INF</template.destination>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>javax.servlet</groupId>
                    <artifactId>javax.servlet-api</artifactId>
                </dependency>
                <dependency>
                    <groupId>javax.servlet.jsp</groupId>
                    <artifactId>javax.servlet.jsp-api</artifactId>
                </dependency>
                <dependency>
                    <groupId>javax.servlet.jsp.jstl</groupId>
                    <artifactId>javax.servlet.jsp.jstl-api</artifactId>
                </dependency>
                <dependency>
                    <groupId>javax.el</groupId>
                    <artifactId>javax.el-api</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

</project>
