<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.maven.resource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>wro</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>WRO</name>

    <profiles>
        <profile>
            <id>wro4j</id>
            <activation>
                <file>
                    <exists>src/main/resources/wro4j</exists>
                </file>
            </activation>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>ro.isdc.wro4j</groupId>
                            <artifactId>wro4j-maven-plugin</artifactId>
                            <version>1.7.6</version>
                            <executions>
                                <execution>
                                    <id>compile</id>
                                    <goals>
                                        <goal>run</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                            <configuration>
                                <debug>false</debug>
                                <ignoreMissingResources>false</ignoreMissingResources>
                                <minimize>true</minimize>
                                <wroManagerFactory>ro.isdc.wro.maven.plugin.manager.factory.ConfigurableWroManagerFactory</wroManagerFactory>
                                <contextFolder>src/main/webapp,${generatedResources}</contextFolder>
                                <cssDestinationFolder>${public.static.resource.destination}/css</cssDestinationFolder>
                                <jsDestinationFolder>${public.static.resource.destination}/js</jsDestinationFolder>
                                <wroFile>src/main/resources/wro4j/wro.xml</wroFile>
                                <extraConfigFile>src/main/resources/wro4j/wro.properties</extraConfigFile>
                                <parallelProcessing>true</parallelProcessing>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>ro.isdc.wro4j</groupId>
                        <artifactId>wro4j-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
