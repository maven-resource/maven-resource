<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.github.maven.resource.parent</groupId>
        <artifactId>parent</artifactId>
        <version>0.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>xml</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>XML</name>

    <build>
        <pluginManagement>
            <plugins>
                <!--
                    http://mojo.codehaus.org/xml-maven-plugin/
                    http://mojo.codehaus.org/xml-maven-plugin/transformation.html
                    http://mojo.codehaus.org/xml-maven-plugin/validation.html
                -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>xml-maven-plugin</artifactId>
                    <version>1.0</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>xml</id>
            <activation>
                <file>
                    <exists>src/main/xml</exists>
                </file>
            </activation>
            <build>
                <resources>
                    <resource>
                        <targetPath>${generatedResources}/xml</targetPath>
                        <filtering>true</filtering>
                        <directory>src/main/xml</directory>
                    </resource>
                </resources>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                            <artifactId>htmlcompressor-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <phase>process-resources</phase>
                                    <goals>
                                        <goal>xml</goal>
                                    </goals>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                            <configuration>
                                <catalogs>
                                    <!-- http://mojo.codehaus.org/xml-maven-plugin/examples/catalog.html -->
                                    <catalog>${project.build.outputDirectory}/catalog.xml</catalog>
                                </catalogs>
                                <srcFolder>${generatedResources}/xml</srcFolder>
                                <targetFolder>${public.static.resource.destination}/xml</targetFolder>
                                <fileExt>
                                    <fileExt>xml</fileExt>
                                </fileExt>
                            </configuration>
                        </plugin>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>xml-maven-plugin</artifactId>
                            <inherited>true</inherited>
                            <configuration>
                                <validationSets>
                                    <validationSet>
                                        <dir>${public.static.resource.destination}/xml</dir>
                                        <includes>
                                            <include>**/*.xml</include>
                                        </includes>
                                        <validating>!${validation.skip}</validating>
                                    </validationSet>
                                </validationSets>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                        <artifactId>htmlcompressor-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>xml-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>src/main/dtd</id>
            <activation>
                <file>
                    <exists>src/main/dtd</exists>
                </file>
            </activation>
            <build>
                <resources>
                    <resource>
                        <targetPath>${public.static.resource.destination}/dtd</targetPath>
                        <filtering>true</filtering>
                        <directory>src/main/dtd</directory>
                    </resource>
                </resources>
            </build>
        </profile>

        <profile>
            <id>xml-xsd</id>
            <activation>
                <file>
                    <exists>src/main/xsd</exists>
                </file>
            </activation>
            <build>
                <resources>
                    <resource>
                        <targetPath>${generatedResources}/xsd</targetPath>
                        <filtering>true</filtering>
                        <directory>src/main/xsd</directory>
                    </resource>
                </resources>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                            <artifactId>htmlcompressor-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>compress-xsd</id>
                                    <phase>process-resources</phase>
                                    <goals>
                                        <goal>xml</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                    <configuration>
                                        <srcFolder>${generatedResources}/xsd</srcFolder>
                                        <targetFolder>${public.static.resource.destination}/xsd</targetFolder>
                                        <fileExt>
                                            <fileExt>xsd</fileExt>
                                        </fileExt>
                                    </configuration>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                        </plugin>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>xml-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>validate-w3c-xml-schemas</id>
                                    <phase>process-classes</phase>
                                    <goals>
                                        <goal>validate</goal>
                                    </goals>
                                    <inherited>true</inherited>
                                    <configuration>
                                        <validationSets>
                                            <validationSet>
                                                <dir>${public.static.resource.destination}/xsd</dir>
                                                <includes>
                                                    <include>**/*.xsd</include>
                                                </includes>
                                                <validating>!${validation.skip}</validating>
                                            </validationSet>
                                        </validationSets>
                                    </configuration>
                                </execution>
                            </executions>
                            <inherited>true</inherited>
                        </plugin>
                    </plugins>
                </pluginManagement>
                <plugins>
                    <plugin>
                        <groupId>com.tunyk.mvn.plugins.htmlcompressor</groupId>
                        <artifactId>htmlcompressor-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>xml-maven-plugin</artifactId>
                        <inherited>true</inherited>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
